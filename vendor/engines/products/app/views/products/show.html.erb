<div class="product floatLeft">
	<h1><%= @product.title %></h1>
	
	<ul class="images">
	<% @product.images.each do |image| %>
		<li><a href="<%= image.url %>"><%= image_fu image, '200x200' %></a></li>
	<% end %>
	</ul>
	
	Model Number: <%= @product.style_number %><br />
	<%= raw @product.description %>
	<%= render :partial => 'pricing', :locals => { :product => @product } %>
</div>

<% content_for :javascript_libraries do %>
	<% javascript_include_tag 'jquery.lightbox-0.5.min.js' %>
<% end %>

<% content_for :javascripts do %>
	<% javascript_include_tag 'products.js' %>
<% end %>