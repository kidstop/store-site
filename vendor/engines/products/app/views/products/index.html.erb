<div class="products floatLeft">
	<h1><%= @title %></h1>
	<ul>
		<% @products.each do |product| %>
			<li>
				<%= link_to image_fu(product.images.first, "200x200"), product_path(product) %>
				<%= link_to product.title, product_path(product) %>
				<%= render :partial => 'pricing', :locals => { :product => product } %>
			</li>
		<% end %>
	</ul>
</div>