<h1><%= @title %></h1>
<ul class="products">
	<% @products.each do |product| %>
		<li>
			<%= link_to image_tag(product.image.url, :height => "100"), product_path(product) %>
			<%= link_to product.title, product_path(product) %>
			<label><%= number_to_currency product.price %></label>
		</li>
	<% end %>
</ul>