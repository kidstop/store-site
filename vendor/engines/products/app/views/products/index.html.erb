<div class="products floatLeft">
	<h1><%= @title %></h1>
	<ul>
		<% @products.each do |product| %>
			<li>
				<%= link_to image_fu(product.images.first, "200x200"), product_path(product) %>
				<%= link_to product.title, product_path(product) %>
				<label class="strikeout"><%= number_to_currency product.retail_price %></label>
				<label><%= number_to_currency product.kidstop_price %></label>

				<% if !product.clearance_price.nil? && product.clearance_price > 0 %>
					<label><%= number_to_currency product.clearance_price %></label>
				<% end %>
			</li>
		<% end %>
	</ul>
</div>